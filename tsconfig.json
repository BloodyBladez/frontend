{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "Bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strict": true,
    "types": [
      "node"
    ],
    "paths": {
      "react": [
        "./node_modules/preact/compat/"
      ],
      "react-dom": [
        "./node_modules/preact/compat/"
      ],
      "@components": [
        "./src/components"
      ],
      "@managers": [
        "./src/managers"
      ],
      "@pages": [
        "./src/pages"
      ],
      "@data": [
        "./src/data"
      ],
      "@classes": [
        "./src/classes"
      ],
      "@config": [
        "./src/config.ts"
      ],
      "@api-types": [
        "./external/api-types"
      ]
    },
    "removeComments": true
  },
  "include": [
    "node_modules/vite/client.d.ts",
    "src/**/*"
  ]
}