.buttons
  margin-top 20px
  display flex
  flex-direction column
  box-sizing border-box
  gap 18px
  justify-content center
  align-items center
  color white

.text
  color white
  font-size 4em
  position relative
  z-index 1
  -webkit-text-stroke-width 2px
  -webkit-text-stroke-color black

animation_length = .5s

.buttons > a
  background black
  position relative
  display flex
  justify-content center
  height 100px
  width 400px
  align-items center
  border-radius 30px
  border 5px solid black
  cursor pointer
  transition border-color animation_length ease
  text-decoration none
  overflow hidden

  &:visited
   color inherit

  &::before
    content ""
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transition opacity animation_length ease

  &:hover
    border-color red

  &:hover::before
    opacity 0.5

menu_button(name, pos)
  &::before
    background-image url('/menu/' + name + '.jpg')
    background-position pos

.court
  menu_button('court', left)

.castle
  menu_button('castle', bottom)

.battle
  menu_button('battle', center)

.character
  menu_button('camp', center)